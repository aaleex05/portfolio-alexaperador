---
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import ProjectsIcon from "../icons/ProjectsIcon.astro";
import AstroIcon from "../icons/skills/AstroIcon.astro";
import NextJsIcon from "../icons/skills/NextjsIcon.astro";
import SupabaseIcon from "../icons/skills/SupabaseIcon.astro";
import TailwindCSSIcon from "../icons/skills/TailwindIcon.astro";
import Badge from "./Badge.astro";
import LinkIcon from "../icons/LinkIcon.astro";
import HtmlIcon from "../icons/skills/HtmlIcon.astro";
import GodotIcon from "../icons/skills/GodotIcon.astro";
import PythonIcon from "../icons/skills/PythonIcon.astro";
import DecapIcon from "../icons/skills/DecapIcon.astro";
import Card from "./Card.astro";

const tags = {
    Astro: {
        name: "Astro",
        class: "bg-[#3e257a] text-white inset-shadow-sm inset-shadow-purple-500/70",
        icon: AstroIcon,
    },
    NextJs: {
        name: "Next.js",
        class: "bg-[#090909] text-white inset-shadow-sm inset-shadow-white/30",
        icon: NextJsIcon,
    },
    Supabase: {
        name: "Supabase",
        class: "bg-[#248559] text-white inset-shadow-sm inset-shadow-green-500/70",
        icon: SupabaseIcon,
    },
    TailwindCSS: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white inset-shadow-sm inset-shadow-blue-500/70",
        icon: TailwindCSSIcon,
    },
    HTML: {
        name: "HTML",
        class: "bg-[#7a3625] text-white inset-shadow-sm inset-shadow-orange-500/70",
        icon: HtmlIcon,
    },
    Godot: {
        name: "Godot",
        class: "bg-[#355570] text-white inset-shadow-sm inset-shadow-blue-400/70",
        icon: GodotIcon,
    },
    Python: {
        name: "Python",
        class: "bg-[#0b395e] text-white inset-shadow-sm inset-shadow-blue-400/50",
        icon: PythonIcon,
    },
    Decap: {
        name: "Decap CMS",
        class: "bg-[#7a2572] text-white inset-shadow-sm inset-shadow-pink-500/70",
        icon: DecapIcon,
    },
};

const projects = [
    {
        title: "Notly",
        description:
            "A note-taking web application that allows users to create, edit, and organize their notes efficiently.",
        link: "https://notly.alexaperador.dev/",
        github: "https://github.com/aaleex05/notly",
        image: "/projects/notly.webp",
        tags: [tags.NextJs, tags.Supabase, tags.TailwindCSS, tags.HTML],
    },
    {
        title: "Caedes:RE",
        description:
            "A 2D horror game developed using the Godot engine and scripted in Python, featuring atmospheric environments and engaging gameplay.",
        link: "https://k1rb1-30.itch.io/caedesre",
        GitHub: "https://github.com/K1rb1-30/Caedes-Re",
        image: "/projects/caedes-re.webp",
        tags: [tags.Godot, tags.Python],
    },
    {
        title: "The Barber Domi",
        description:
            "The Barber Domi is a modern and functional barbershop website where clients can book appointments and explore services. I implemented Decap CMS to allow the client to easily manage the image gallery.",
        link: "https://thebarberdomi.netlify.app/",
        GitHub: "https://github.com/aaleex05/barberdomi",
        image: "/projects/thebarberdomi.webp",
        tags: [tags.Astro, tags.TailwindCSS, tags.Decap, tags.HTML],
    },
];
---

<div
    class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 space-y-8 flex flex-col"
    id="projects"
>
    <div class="flex items-center justify-center mb-5">
        <Badge text="Projects" icon={ProjectsIcon} />
        <Badge
            text="Projects"
            className="absolute blur-xs -z-1 animate-pulse"
            icon={ProjectsIcon}
        />
    </div>
    {
        projects.map(({ title, description, tags, image, link, github }) => (
            <Card>
                <h3 class="lg:text-3xl text-2xl font-semibold gradient-text mb-2">
                    {title}
                </h3>
                <p class="lg:text-lg gradient-text text-lm mb-4 text-pretty">
                    {description}
                </p>
                <ul class="flex gap-x-2 flex-row flex-wrap gap-y-3 pb-4">
                    {tags.map((tag) => (
                        <li>
                            <span
                                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-4`}
                            >
                                <tag.icon class="size-4" />
                                {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>
                <img
                    class="rounded shadow-2xl shadow-white/10"
                    src={image}
                    alt={title}
                />
                <div class="inline-flex gap-x-4 pt-4">
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="dark:bg-gray-200 bg-[#141414] duration-500 hover:scale-105 dark:text-[#141414] text-gray-200 py-2 px-4
                    rounded-full font-medium flex items-center gap-2 hover:dark:bg-white hover:bg-[#3b3b3b] cursor-pointer"
                    >
                        <LinkIcon />
                        Preview
                    </a>
                    <a
                        href={github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="dark:bg-gray-200 bg-[#141414] duration-500 hover:scale-105 dark:text-[#141414] text-gray-200 py-2 px-4
                    rounded-full font-medium flex items-center gap-2 hover:dark:bg-white hover:bg-[#3b3b3b] cursor-pointer"
                    >
                        <GitHubIcon />
                        GitHub
                    </a>
                </div>
            </Card>
        ))
    }
</div>
