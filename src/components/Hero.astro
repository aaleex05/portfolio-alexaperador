---
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import SendIcon from "../icons/SendIcon.astro";
import Skills from "./Skills.astro";

const IconStyle =
    "w-10 h-10 hover:text-[#3b3b3b] dark:text-gray-200 dark:hover:text-white cursor-pointer";

const socialLinks = [
    {
        icon: GitHubIcon,
        url: "https://github.com/aaleex05/",
    },
    {
        icon: LinkedInIcon,
        url: "https://www.linkedin.com/in/alex-aperador/",
    },
];
---

<div class="flex items-center flex-col mt-30 gap-4">
    <div class="gradient-text flex items-center flex-col">
        <p class="font-medium lg:text-lg text-md">Alex Aperador Salcedo</p>
        <h1 class="lg:text-9xl text-6xl font-bold text-center">
            FRONTEND
            <br />
            DEVELOPER
        </h1>
    </div>
    <div
        class="bg-[#174b24] px-5 py-2 rounded-full text-md flex items-center gap-3 mt-5 drop-shadow-md dark:shadow-[0_0_20px_rgba(47,147,47,0.30)]"
    >
        <div class="bg-[#2F932F] animate-pulse w-4 h-4 rounded-full"></div>
        <p class="text-md text-gray-200">Available to work</p>
    </div>

    <div class="flex gap-5 mt-10 items-center mb-20">
        {
            socialLinks.map(({ icon: Icon, url }) => (
                <a
                    href={url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex w-fit items-center justify-center text-sm hover:text-[#3b3b3b] text-[#141414] dark:text-gray-200 dark:hover:text-white font-medium h-fit relative transition-transform duration-500 hover:scale-105"
                >
                    <Icon class={IconStyle} />
                    <Icon class="absolute w-10 h-10 z-10 scale-105 blur-xs animate-pulse" />
                </a>
            ))
        }
        <div class="flex">
            <a
                href="mailto:alexapsa2007@gmail.com"
                class="dark:bg-gray-200 bg-[#141414] duration-500 hover:scale-105 dark:text-[#141414] text-gray-200 py-2 px-4
                rounded-full font-medium flex items-center gap-2 hover:dark:bg-white hover:bg-[#3b3b3b] cursor-pointer"
                ><SendIcon />
                <SendIcon class="absolute z-10 scale-105 blur-xs" />Contact me</a
            >
        </div>
    </div>
    <Skills />
</div>
